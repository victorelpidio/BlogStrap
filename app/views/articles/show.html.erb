<article class="blog-post">
  <h2 class="blog-post-title"><%=  @article.title %></h2>
  <p class="blog-post-meta">
    <%= render 'article_detail', article: @article %>
  </p>

  <p><%= @article.body%></p>

  <%= link_to t('app.button.edit'), edit_article_path(@article), class: "btn btn-outline-secondary" if policy(@article).update? %> 
  <%= link_to t('app.button.destroy'), article_path(@article),
        method: :delete,
        data: {confirm: t('app.message.confirm_destroy')},
        class:"btn btn-outline-danger" if policy(@article).destroy? %>
  <%= link_to t('app.button.back'), articles_path, class:"btn btn-outline-dark" %>
  
  <h2 class='mt-3'><%= t('.comments')  %></h2>
  <%= render @article.comments %>

  <h2><%= t('.add_comment')  %></h2>
  <%= render 'comments/form' %>
</article>