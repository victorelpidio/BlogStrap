<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic"><%= article.title %></h1>
    <p class="blog-post-meta"><%= handle_date(article.created_at)%> by <%= article.user.email  %></p>
    <p class="lead my-3"><%= truncate(article.body, lenght: 250)%></p>
    <p class="lead mb-0">
      <%= link_to t('articles.continue_reading'), article, class:'text-white fw-bold' %>
    </p>
  </div>
</div>