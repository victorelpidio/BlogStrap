<%= simple_form_for article do |form| %>
  
  <%= form.input :title %>
  <%= form.input :body, input_html:{rows: 10} %> <%#rows: 10 :tamanho da area do texto%>
  
  <br>

  <p>
    <%= form.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Back', root_path, class:"btn btn-primary" %>
  </p>
<% end %>
