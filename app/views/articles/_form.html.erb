<%= simple_form_for article do |f| %>
  
  <div class='form-inputs'>
    <%= f.input :title %>
    <%= f.input :body, input_html:{rows: 10} %> <%#rows: 10 :tamanho da area do texto%>
    <%= f.association :category, collection:  @categories, prompt: t('.articles.form.choose_category')  %> <%#ira aparecer os campos da tabela categoria(apenas para selecionar) // prompt=placeholder%>
  </div>


  <div class='form-actions'>
    <%= f.button :submit, class: 'btn btn-primary' %>
    <%= link_to 'Back', root_path, class:"btn btn-primary" %>
  </div>
<% end %>
