<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= handle_date(comment.created_at)%></h5>
    <h6 class="card-subtitle mb-2 text-muted">
      <%= t 'comments.index.commenter' %>:<%= comment.user.email %>
    </h6>
    <p class="card-text"><%= comment.body %></p>

    <%= link_to t('app.button.destroy'), article_comment_path(@article, comment),
        method: :delete,
        data: {confirm: t('app.message.confirm_destroy')},
        class:"btn btn-outline-danger" if policy(comment).destroy? %>
  </div>
</div>